<resources>


    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar" />
<!--    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">-->

    <!--透明主题，验证透明主题的Activity覆盖前一个时，前一个的onStop不会执行-->
    <style name="AppThemeTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <!--横线-->
    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px1</item>
        <item name="android:background">@color/color_f4f4f4</item>
    </style>

    <!--竖线-->
    <style name="line_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_dddddd</item>
    </style>
</resources>
